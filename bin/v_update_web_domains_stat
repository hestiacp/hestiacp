#!/bin/bash
# info: update domains statistics
# options: user
#
# The function runs log analyzer usage for all user webdomains.


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument defenition
user=$1

# Importing variables
source $VESTA/conf/vars.conf
source $V_CONF/vesta.conf
source $V_FUNC/shared.func
source $V_FUNC/domain.func


#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

# Checking arg number
check_args '1' "$#" 'user'

# Checking argument format
format_validation 'user'

# Checking web system is enabled
is_system_enabled 'web'

# Checking user
is_user_valid


#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Defining fileds to select
field='$DOMAIN'
conf="$V_USERS/$user/web.conf"
search_string="SUSPEND='no'"

# Parsing domain list
domains=$(dom_clear_search)

# Starting upd loop
for domain in $domains; do
    stats=$(get_web_domain_value '$STATS')
    if [ ! -z "$stats" ]; then
        $V_BIN/v_update_web_domain_stat "$user" "$domain"
        rv="$?"
        if [ "$rv" -ne '0' ]; then
            log_event 'debug' "$rv $V_EVENT"
            exit $rv
        fi
    fi
done


#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

# Logging
log_event 'system' "$V_EVENT"

exit
