#!/bin/bash
# info: generate api key
# options: NONE
# labels: panel
#
# example: v-generate-api-key 
#
# The function creates a key file in $HESTIA/data/keys/


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

source $HESTIA/func/main.sh

keygen() {
    < /dev/urandom tr -dc _A-Z-a-z-0-9 | head -c${1:-32};echo;
}
KEYS="$HESTIA/data/keys/"
HASH=$(keygen)

# Perform verification if read-only mode is enabled
check_hestia_demo_mode
#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

if [ ! -d ${KEYS} ]; then
    mkdir -p ${KEYS}
    chown admin:root ${KEYS}
    chmod 750 ${KEYS}
fi

if [[ -e ${KEYS}${HASH} ]] ; then
    while [[ -e ${KEYS}${HASH} ]] ; do
        HASH=$(keygen)
    done
fi

touch ${KEYS}${HASH}
echo ${HASH}

#----------------------------------------------------------#
#                       Hestia                             #
#----------------------------------------------------------#
$BIN/v-log-action "system" "Warn" "System" "New system API key generated (Key: ${HASH})."

exit
