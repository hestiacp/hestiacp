#!/bin/bash
# info: delete file
# options: USER FILE
#
# example: v-delete-fs-file admin readme.txt
#
# This function deletes file on the file system

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

user=$1
dst_file=$2

# Includes
# shellcheck source=/etc/hestiacp/devcp.conf
source /etc/hestiacp/devcp.conf
# shellcheck source=/usr/local/devcp/func/main.sh
source $HESTIA/func/main.sh

#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

check_args '2' "$#" 'USER FILE'
is_format_valid 'user'
is_object_valid 'user' 'USER' "$user"

# Perform verification if read-only mode is enabled
check_hestia_demo_mode

# Checking user homedir
homedir=$(grep "^$user:" /etc/passwd | cut -f 6 -d :)
if [ -z $homedir ]; then
	echo "Error: user home directory doesn't exist"
	exit 12
fi

# Checking destination path
rpath=$(readlink -f "$dst_file")
if [ -z "$(echo $rpath | egrep "^/tmp|^$homedir")" ]; then
	echo "Error: invalid destination path $dst_file"
	exit 2
fi

# Deleting file
user_exec rm -f "$dst_file" > /dev/null 2>&1
if [ $? -ne 0 ]; then
	echo "Error: file $dst_file was not deleted"
	exit 3
fi

# Exiting
exit
