#!/bin/bash
# info: update dns templates
# options: [RESTART]
# labels: dns
#
# example: v-update-dns-templates
#
# The function for obtaining updated dns templates from Hestia package.


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument definition
restart=$1

# Includes
# shellcheck source=/usr/local/hestia/func/main.sh
source $HESTIA/func/main.sh
# shellcheck source=/usr/local/hestia/conf/hestia.conf
source $HESTIA/conf/hestia.conf

# Perform verification if read-only mode is enabled
check_hestia_demo_mode

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Update templates
cp -rf $HESTIA_INSTALL_DIR/templates/dns $HESTIA/data/templates/

#----------------------------------------------------------#
#                       Hestia                             #
#----------------------------------------------------------#

# Clean tmpdir
rm -rf $tmpdir

$BIN/v-log-action "system" "Info" "System" "Updated DNS templates."
exit
