#!/bin/bash
# info: list web domains and alias key
# options: USER [FORMAT]
#
# The function for obtaining the list of domains with SSL parameter displayed.
# This call was arranged for filling in the lack of information by applying
# v-list-web-domains call in the shell format.


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument definition
user=$1
format=${2-shell}

# Includes
source $VESTA/func/main.sh


#----------------------------------------------------------#
#                    Verifications                         #
#----------------------------------------------------------#

check_args '1' "$#" 'USER [FORMAT]'
validate_format 'user'
is_object_valid 'user' 'USER' "$user"


#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Defining config
conf="$USER_DATA/web.conf"

# Defining fileds to select
fields="\$DOMAIN \$IP \$TPL \$SSL \$SSL_HOME \$SUSPENDED"

# Listing domains
case $format in 
    json)   json_list ;;
    plain)  nohead=1; shell_list ;;
    shell)  shell_list | column -t ;;
    *)      check_args '1' "0" 'USER [FORMAT]'
esac


#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

exit
