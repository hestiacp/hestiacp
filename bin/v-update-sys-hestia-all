#!/bin/bash
# info: update all devcp packages
# options: NONE
#
# example: v-update-sys-devcp-all
#
# This function of updating all devcp packages

#----------------------------------------------------------#
#                Variables & Functions                     #
#----------------------------------------------------------#

# Includes
# shellcheck source=/etc/hestiacp/devcp.conf
source /etc/hestiacp/devcp.conf
# shellcheck source=/usr/local/devcp/func/main.sh
source $HESTIA/func/main.sh
# load config file
source_conf "$HESTIA/conf/devcp.conf"

# Perform verification if read-only mode is enabled
check_hestia_demo_mode

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Starting update loop
for package in devcp devcp-nginx devcp-php; do
	$BIN/v-update-sys-devcp "$package"
done

#----------------------------------------------------------#
#                       Hestia                             #
#----------------------------------------------------------#

exit
