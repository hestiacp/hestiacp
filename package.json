		"normalize.css": "^8.0.1"
	},
	"devDependencies": {
		"@prettier/plugin-php": "^0.19.4",
		"@typescript-eslint/eslint-plugin": "^5.59.2",
		"@typescript-eslint/parser": "^5.59.2",
		"cssnano": "^6.0.1",
