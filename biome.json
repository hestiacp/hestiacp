{
	"$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!**/dist/**",
			"!**/*.bats",
			"!**/*.min.css",
			"!**/*.min.js",
			"!**/vendor/**",
			"!**/node_modules/**",
			"!**/test-results/**",
			"!**/.vitepress/cache/**",
			"!**/test/test_helper/**"
		]
	},
	"formatter": {
		"enabled": false,
		"useEditorconfig": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noDescendingSpecificity": "off"
			},
			"correctness": {
				"noUnknownMediaFeatureName": "off",
				"noUnusedVariables": "off",
				"noUnusedImports": "off"
			},
			"suspicious": {
				"noEmptyBlock": "off",
				"noShorthandPropertyOverrides": "off",
				"noDuplicateProperties": "off",
				"noDoubleEquals": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
