# ===========================================
# Configuration du Site Builder HestiaCP
# ===========================================
# Copier ce fichier vers .env et modifier les valeurs

# ---- Serveur ----
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# ---- Base de données PostgreSQL ----
# PostgreSQL est recommandé pour le support JSONB natif
DB_HOST=localhost
DB_PORT=5432
DB_NAME=site_builder
DB_USER=site_builder_user
DB_PASSWORD=your_secure_password_here

# ---- Authentification JWT ----
# Générer une clé secrète forte : openssl rand -hex 64
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# ---- SSO HestiaCP ----
# Secret partagé avec HestiaCP pour valider les signatures
# Doit être identique côté HestiaCP
HESTIA_SSO_SECRET=shared_secret_between_hestia_and_builder

# ---- Chemins de publication ----
# Chemin de base où les sites seront publiés
# {USERNAME} et {DOMAIN} seront remplacés dynamiquement
PUBLISH_BASE_PATH=/home/{USERNAME}/web/{DOMAIN}/public_html

# Chemin alternatif (optionnel)
# PUBLISH_BASE_PATH=/var/web/public/{USERNAME}/{DOMAIN}

# ---- Sécurité ----
# Activer HTTPS en production
SECURE_COOKIES=false

# Rate limiting (requêtes par minute par IP)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ---- Logs ----
LOG_LEVEL=debug
LOG_FILE=./logs/app.log
