		"prettier-plugin-sh": "^0.18.0",
		"prettier-plugin-sql": "^0.19.2",
		"stylelint": "^16.24.0",
		"stylelint-config-standard": "^38.0.0",
		"vitepress": "^1.6.4",
		"vitest": "^3.2.4",
		"vue": "^3.5.18"
