		"floating-vue": "^5.2.2",
		"nanoid": "^5.1.2",
		"normalize.css": "^8.0.1",
		"xterm": "^5.3.0",
		"xterm-addon-canvas": "^0.5.0",
		"xterm-addon-webgl": "^0.16.0"
