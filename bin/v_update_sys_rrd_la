#!/bin/bash
# info: update load average rrd
# options: period
#
# The function is for updating load average rrd database and graphic.


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

# Argument defenition
update=$1
period=${1-daily}

# Importing variables
source $VESTA/conf/vars.conf


#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

# Switching on time period
case $period in
    daily)   start='-1d'; end='now'; grid='MINUTE:30:HOUR:1:HOUR:4:0:%H:%M';;
    weekly)  start='-7d'; end='now'; grid='HOUR:8:DAY:1:DAY:1:0:%a %d';;
    monthly) start='-1m'; end='now'; grid='WEEK:1:WEEK:1:WEEK:1:0:%b %d';;
    yearly)  start='-1y'; end='now'; grid='MONTH:1:YEAR:1:MONTH:2:2419200:%b';;
    *) exit $E_RRD ;;
esac

# Checking directory
if [ ! -d "$V_RRD/la" ]; then
    mkdir $V_RRD/la
fi

# Checking database
if [ ! -e "$V_RRD/la/la.rrd" ]; then
    # Adding database
    rrdtool create $V_RRD/la/la.rrd --step $V_RRD_STEP \
        DS:LA:GAUGE:600:U:U \
        DS:PR:GAUGE:600:U:U \
        RRA:AVERAGE:0.5:1:600 \
        RRA:AVERAGE:0.5:6:700 \
        RRA:AVERAGE:0.5:24:775 \
        RRA:AVERAGE:0.5:288:797 \
        RRA:MAX:0.5:1:600 \
        RRA:MAX:0.5:6:700 \
        RRA:MAX:0.5:24:775 \
        RRA:MAX:0.5:288:797
fi

# Parsing data
if [ -z "$update" ]; then
    loadavg=$(cat /proc/loadavg )
    la=$(echo "$loadavg"|cut -f 2 -d ' ')
    pr=$(echo "$loadavg"|cut -f 4 -d ' '|cut -f 2 -d /)

    # Updating rrd database
    rrdtool update $V_RRD/la/la.rrd N:${la//./}:$pr
fi

# Updating graph
rrdtool graph $V_RRD/la/$period-la.png \
    --imgformat PNG \
    --height="120" \
    --width="440" \
    --start "$start" \
    --end "$end" \
    --vertical-label "Points" \
    --x-grid "$grid" \
    -c "BACK#484439" \
    -c "SHADEA#484439" \
    -c "SHADEB#484439" \
    -c "FONT#DDDDDD" \
    -c "CANVAS#202020" \
    -c "GRID#666666" \
    -c "MGRID#AAAAAA" \
    -c "FRAME#202020" \
    -c "ARROW#FFFFFF" \
    DEF:la=$V_RRD/la/la.rrd:LA:AVERAGE \
    DEF:pr=$V_RRD/la/la.rrd:PR:AVERAGE \
    COMMENT:'\r' \
    AREA:la#C8EA2E:"LA * 100"\
    GPRINT:la:'LAST: Current\:''%8.0lf'  \
    GPRINT:la:'MIN: Min\:''%8.0lf'  \
    GPRINT:la:'MAX: Max\:''%8.0lf\j'  \
    LINE1:pr#1c74cd:"Procs # " \
    GPRINT:pr:'LAST:Current\:''%8.0lf' \
    GPRINT:pr:'MIN:Min\:''%8.0lf' \
    GPRINT:pr:'MAX:Max\:''%8.0lf\j' >/dev/null 2>/dev/null; result=$?


#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

if [ "$result" -ne 0 ]; then
    exit $E_RRD
fi

exit
