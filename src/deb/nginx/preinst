#!/bin/bash

# Run triggers only on updates
if [ ! -e "/usr/local/devcp/data/users/admin" ]; then
	exit
fi

# Create a new Backup folder
HESTIA_BACKUP="/root/dst_nginx_backups/$(date +%d%m%Y%H%M)"
mkdir -p HESTIA_BACKUP

# Create a backup of the current configuration
cp -r /usr/local/devcp/nginx/conf/nginx.conf $HESTIA_BACKUP/nginx.conf

exit
